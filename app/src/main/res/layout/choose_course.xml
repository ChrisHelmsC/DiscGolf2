<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_Play"
    tools:context=".ChooseCourse"
    android:background="@color/whiteText"
    android:focusable="true"
    >

        <!--Search bar-->
        <EditText
            android:id="@+id/play_edit"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:textSize="35sp"
            android:hint="@string/choose_course_search_hint"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            />

        <!--Course Listview-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/choose_course_list_view"
            android:layout_below="@id/play_edit">

                <ListView
                    android:id="@+id/play_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    >

                </ListView>

        </RelativeLayout>

</RelativeLayout>


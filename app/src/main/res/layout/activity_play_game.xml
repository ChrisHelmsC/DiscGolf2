<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_Play"
    tools:context=".ChooseCourse"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/play_edit"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:textSize="35sp"
            android:hint="Course Search"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

        <ListView
            android:id="@+id/play_list_view"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/border">

        </ListView>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="Course Par Avg:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/play_course_par_avg"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:text="3"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="22dp"
                    android:text="Personal Par Avg:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/play_personal_par_avg"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:text="3"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="22dp"
                    android:text="Personal Best Par:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/play_personal_best_par"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:text="3"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/play__game_button"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:text="Play"
            android:textSize="25dp"/>

    </LinearLayout>

</LinearLayout>


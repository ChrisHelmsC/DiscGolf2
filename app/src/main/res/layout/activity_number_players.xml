<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chris.discgolf.NumberPlayers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player Names"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/number_players_list_view"
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:focusable="false"
        android:descendantFocusability="beforeDescendants"
         >


    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/number_players_decrement"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text=""/>

        <TextView
            android:id="@+id/number_players_number_players"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/number_players_increment"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text=""/>

    </LinearLayout>

    <Button
        android:id="@+id/number_players_confirm"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Confirm"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"/>

</LinearLayout
   >
